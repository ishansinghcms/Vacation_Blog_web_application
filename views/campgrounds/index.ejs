<%- include("../partials/header")%> <!--  ../ represents one level back -->

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <br>
            <h1>Welcome to Our Vacation Blog!</h1>
            <br>
            <h4 style="font-family: 'Fuggles', cursive;">Here are some vacation pictures of beautiful destinations shared by people around the world. Plan your dream vacation and share your experience to the world!</h4>
            <br>
            <p><a href="/campgrounds/new" class="btn btn-outline-dark btn-md">Share Your Experience</a></p>
        </div>
    </div>
    <br>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% cg1.forEach(function(data){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail" style="margin-top:10px;">
                <img src="<%= data.image %>" alt="">
                <div class="caption">
                    <h4><%= data.name %></h4>
                </div> 
                    <p> <!-- each element has a specific id in mongo -->
                    <a class="btn btn-outline-dark btn-sm" href="/campgrounds/<%= data._id %>">More Info</a> 
                    </p>
            </div>   
        </div>
                <% }) %>
    </div>
</div>
<%- include("../partials/footer")%>